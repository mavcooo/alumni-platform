# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://alumni:password@localhost:5432/alumni_platform

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth 2.0 - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/oauth/google/callback

# Email Configuration (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@alumni-platform.it
FROM_NAME=Alumni Platform

# SMTP Alternative (if not using SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload (AWS S3 / Cloudflare R2)
AWS_REGION=eu-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=alumni-platform-uploads
S3_ENDPOINT=https://s3.eu-south-1.amazonaws.com

# Cloudflare R2 (Alternative)
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-min-32-chars

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/

# Security
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=10485760

# WebSocket
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000

# Matching Algorithm
MIN_MATCH_SCORE=0.30

# Notifications
NOTIFICATION_BATCH_SIZE=50
